<%- include("../_partials/_information") %>

    <div class="col-md-9">
        <form method="POST" action="/information/setting" class="personal-form">
            <% if(info && info.length > 0){ %>
                <div class="alert alert-info alert-information" role="alert">
                    <%= info %>
                </div>
            <% } %>
            <% if(error && error.length > 0){ %>
                <div class="alert alert-danger alert-information" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <h1 class="no-select text-center">CÀI ĐẶT TÀI KHOẢN</h1>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-3 col-form-label no-select">Đổi tên đăng nhập</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="username" value="<%= username %>">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-3 col-form-label no-select">Đổi email</label>
                <div class="col-sm-9">
                    <input type="email" class="form-control" name="email" value="<%= email %>">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-3 col-form-label no-select"></label>
                <div class="col-sm-9 no-select">
                    <% if(checked){ %>
                        <input class="form-check-input" type="checkbox" value="" id="changePasswordBtn" onclick="changePassword()" checked>
                    <% } %>
                    <% if(!checked){ %>
                        <input class="form-check-input" type="checkbox" value="" id="changePasswordBtn" onclick="changePassword()">
                    <% } %>
                    <label class="form-check-label" for="flexCheckDefault">
                    Đổi mật khẩu
                    </label>
                </div>
            </div>
            <div class="hidden" id="changePassword">            
                <% if(errorChangePassword && errorChangePassword.length > 0){ %>
                    <div class="alert alert-danger alert-information" role="alert">
                        <%= errorChangePassword %>
                    </div>
                <% } %>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-3 col-form-label no-select">Nhập mật khẩu hiện tại</label>
                    <div class="col-sm-9" id="i1"></div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-3 col-form-label no-select">Nhập mật khẩu mới</label>
                    <div class="col-sm-9" id="i2"></div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-3 col-form-label no-select">Nhập lại mật khẩu mới</label>
                    <div class="col-sm-9" id="i3"></div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-5"></div>
                <button type="submit" class="btn btn-primary col-1">Save</button>
            </div>
        </form>
    </div>
    <script src="../js/information/changePassword.js"></script>

<%- include("../_partials/_footer") %>