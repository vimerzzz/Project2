<%- include("../_partials/_information") %>

    <div class="col-md-9">
        <div class="personal-form">
            <h1 class="no-select text-center">QUẢN LÝ SHOP</h1>
            <div id="shopPaginationTable">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control pa_search" id="datatable-search-input" placeholder="search" style="width: 300px;">
                    <label class="form-label" for="datatable-search-input">Search</label>
                </div>
                <table class="table table-striped table-sm">
                    <thead>
                        <tr class="no-select">
                            <th class="pa_sort" data-sort="pa_count" style="width: 40px;">#</th>
                            <th class="pa_sort" data-sort="pa_shop" style="width: 300px;">Tên shop</th>
                            <th class="pa_sort" data-sort="pa_username">Chủ sở hữu</th>
                            <th class="pa_sort" data-sort="pa_totalItem">Số lượng sản phẩm</th>
                            <th>Chi tiết</th>
                        </tr>
                    </thead>
                    <tbody class="pa_list">
                        <% var count = 0; %>
                        <% shops.forEach(function(shop){ %>
                            <% count++; %>
                            <div class="modal fade" id="shop<%= count %>">
                                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" style="max-width: 700px;">
                                    <div class="modal-content">
                                        <div class="modal-header no-select">
                                            <h5 class="modal-title" style="margin-left: 20px;">Chi tiết shop</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" style="margin-right: 10px;"></button>
                                        </div>
                                        <div class="modal-body" style="margin-left: 20px;">
                                            <div class="row mb-3">
                                                <label for="inputEmail3" class="col-sm-4 col-form-label no-select"><b>Tên shop</b></label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control item-detail-disabled" value="<%= shop.shopName %>" disabled style="width: 90%;">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="inputEmail3" class="col-sm-4 col-form-label no-select"><b>Ảnh đại diện shop</b></label>
                                                <div class="col-sm-8 img-circle">
                                                    <img id="img" src="../<%= images[count - 1] %>" width="300px">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="inputEmail3" class="col-sm-4 col-form-label no-select"><b>Chủ sở hữu</b></label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control item-detail-disabled" value="<%= shop.user.username %>" disabled style="width: 90%;">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="inputEmail3" class="col-sm-4 col-form-label no-select"><b>Họ tên đầy đủ</b></label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control item-detail-disabled" value="<%= shop.user.userinfo.fullName %>" disabled style="width: 90%;">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="inputEmail3" class="col-sm-4 col-form-label no-select"><b>Số người theo dõi</b></label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control item-detail-disabled" value="<%= shop.totalFollower %>" disabled style="width: 90%;">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="inputEmail3" class="col-sm-4 col-form-label no-select"><b>Số lượng sản phẩm</b></label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control item-detail-disabled" value="<%= shop.totalItem %>" disabled style="width: 90%;">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="inputEmail3" class="col-sm-4 col-form-label no-select"><b>Ngày tạo shop</b></label>
                                                <div class="col-sm-8">
                                                    <input type="date" class="form-control item-detail-disabled" value="<%= shop.createdAt %>" disabled style="width: 90%;">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Đóng</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <tr>
                                <td class="pa_count"><%= count %></td>
                                <td class="pa_shop"><%= shop.shopName %></td>
                                <td class="pa_username"><%= shop.user.username %></td>
                                <td class="pa_totalItem"><%= shop.totalItem %></td>
                                <td class="item-detail" data-bs-toggle="modal" data-bs-target="#shop<%= count %>">Chi tiết</td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
                <div class="d-flex justify-content-end mt-2">
                    <ul class="pagination"></ul>
                </div>
            </div>
        </div>
    </div>

<%- include("../_partials/_footer") %>